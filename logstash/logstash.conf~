input {
  http {
    host => "0.0.0.0"
    port => "2000"
  }
}

filter {
  mutate {
    add_field => { "name" => "%{message}" }
    add_field => { "ordered" => "true" }
    remove_field => [ "headers", "host", "message" ]
  }
}

output {
  mongodb {
    collection => "orders"
    database => "ordersDB"
    uri => "mongodb://172.31.30.237:91"
  }
  stdout { codec => rubydebug }
}
